<UserControl x:Class="LoadingAnimation.Avalonia.Demo.Views.ClassicPage"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:classic="using:LoadingAnimation.Avalonia.Classic"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:l="using:LoadingAnimation.Avalonia.LoadingControls.Demo"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:vm="using:LoadingAnimation.Avalonia.Demo.ViewModels"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UniformGrid>
        <Border>
            <classic:Classic1 />
        </Border>

        <Border>
            <classic:Classic2 x:DataType="vm:MainWindowViewModel" CaptionText="{Binding TestStr}" />
        </Border>

        <Border>
            <classic:Classic3 />
        </Border>

        <Border>
            <classic:Classic4 />
        </Border>

        <Border>
            <classic:Classic5 />
        </Border>

        <Border>
            <classic:Classic6 />
        </Border>
		<Border>
			<classic:Classic7 />
		</Border>
    </UniformGrid>
</UserControl>
