<UserControl x:Class="LoadingAnimation.Avalonia.Classic.Classic6"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <Grid>
        <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Margin="6" Text="Loading..." />
            <Grid x:Name="maskGrid" Background="{StaticResource PrimaryBrush}">
                <Grid.Clip>
                    <EllipseGeometry Center="12,16" RadiusX="12" RadiusY="12" />
                </Grid.Clip>
                <TextBlock Margin="6" Foreground="White" Text="Loading..." />
            </Grid>
        </Grid>
    </Grid>
</UserControl>
