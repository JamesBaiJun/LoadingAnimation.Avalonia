<UserControl x:Class="LoadingAnimation.Avalonia.Views.BarsPage"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:bars="using:LoadingAnimation.Avalonia.Bars"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             d:DesignHeight="450"
             d:DesignWidth="800"
             mc:Ignorable="d">
    <UniformGrid>
        <Border Margin="8"
                BorderBrush="{StaticResource ShadowBrush}"
                BorderThickness="1"
                CornerRadius="4">
            <bars:Bar1 />
        </Border>

		<Border Margin="8"
                BorderBrush="{StaticResource ShadowBrush}"
                BorderThickness="1"
                CornerRadius="4">
			<bars:Bar2 />
		</Border>
		<Border Margin="8"
                BorderBrush="{StaticResource ShadowBrush}"
                BorderThickness="1"
                CornerRadius="4">
			<bars:Bar3 />
		</Border>
    </UniformGrid>
</UserControl>
